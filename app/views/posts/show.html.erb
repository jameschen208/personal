<div id="post_show_content" class="skinny_wrapper">
	<header>
		<h1 class="secondary_header"><%= @post.title %></h1>
		<p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
	</header>
	<hr>
	<div id="content">
		<%= markdown @post.content %>
	</div>

	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "Edit", edit_post_path(@post) %>
			<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
		</div>
	<% end %>

	<%= render 'disqus' %>

</div>